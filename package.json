{
  "name": "chatrag",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo with Hono API and Tanstack Router SPA",
  "scripts": {
    "build": "pnpm run -r build",
    "dev": "pnpm run -r --parallel dev",
    "dev:continue": "pnpm db:start && pnpm dev",
    "dev:zero": "pnpm db:stop && pnpm dev:continue",
    "db:start": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:stop": "docker-compose down",
    "db:migrate": "pnpm run --filter api db:migrate",
    "db:reset": "pnpm run --filter api db:reset",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "biome": "^0.3.3",
    "typescript": "^5.7.3"
  }
}